              whileTap={{ scale: 0.95 }}
              aria-label="Scroll to top"
            >
              <ArrowUp className="w-6 h-6" />
            </motion.button>
          )}
        </AnimatePresence>
        
        {/* Substitute Modal */}
        <AnimatePresence>
          {showSubstitutes && (
            <SubstituteModal
              medicine={selectedMedicine}
              substitutes={medicineSubstitutes[selectedMedicine]}
              onClose={() => setShowSubstitutes(false)}
              darkMode={darkMode}
            />
          )}
        </AnimatePresence>
      </div>
    </div>
  );
}

export default App;
